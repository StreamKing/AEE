---
import "../colors.css";
import "../global.css";
import Nav from "../components/Nav.astro";
import { Image } from "astro:assets";
import AeeLogo from "../assets/aee_logo.svg";
const { centered } = Astro.props;

const layout = centered ? "centered" : "full-width";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />

    <title>AEE Sulzbach</title>
  </head>
  <body>
    <header>
      <a href="/AEE/" aria-label="Startseite"
        ><Image class="aee-logo" src={AeeLogo} alt="" />
      </a>
      <Nav />
    </header>
    <main class={layout}>
      <slot />
    </main>
    <footer><p>&copy; {new Date().getFullYear()} Stefan Geiger</p></footer>
  </body>
</html>

<style>
  .nav-container {
    display: flex;
    justify-content: end;
  }
</style>

<style>
  html,
  body {
    container-type: inline-size;
    margin: 0;
    height: 100%;
    display: flex;
    flex-direction: column;

    background-color: var(--background-color);

    --header-grid-columns: min-content auto;
    --header-justify-nav-container: end;
    @container (max-width: 521px) {
      header {
        --header-grid-columns: auto;
        --header-justify-nav-container: start;
      }
    }
  }

  header {
    display: grid;
    grid-template-columns: var(--header-grid-columns);

    .nav-container {
      justify-items: var(--header-justify-nav-container);
    }

    .aee-logo {
      height: 72px;
      width: fit-content;
    }
  }

  main {
    &.full-width {
      flex: 1;
    }
    &.centered {
      flex: 1;
      margin-inline: 12.5%;
    }
  }
</style>

