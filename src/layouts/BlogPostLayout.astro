---
import "../colors.css";
import "../global.css";
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout>
  <div class="centered">
    <meta charset="utf-8" />
    <h1>{frontmatter.title}</h1>
    <p>Geschrieben von {frontmatter.author}</p>
    <p>Ver√∂ffentlicht {frontmatter.pubDate}</p>
